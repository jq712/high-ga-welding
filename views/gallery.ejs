<!DOCTYPE html>
<html lang="en">
  <!--prettier-ignore-->
  <%- include('partials/head.ejs', {
      title: 'High Georgia Welding',
      description: 'High Georgia Welding was founded with a passion for precision and a commitment to excellence. Over the years, we have grown into a trusted name in the welding industry, known for our quality workmanship and customer-centric approach.',
      cssPath: './styles.css'
  }) %>
  <body>
    <!--prettier-ignore-->
    <%- include('partials/nav.ejs') %>
    <main class="glassmorphism gallery">
      <h2 id="image-gallery" class="gallery__title">Image Gallery</h2>
      <div id="filter-data-btn-container" class="gallery__filters">
        <button class="filter-button active" data-filter="all">All</button>
        <button class="filter-button" data-filter="pipes">Pipes</button>
        <button class="filter-button" data-filter="structural">
          Structural
        </button>
      </div>

      <div id="gallery-container" class="gallery__grid">
        <% if (images && images.length > 0) { %> <% images.forEach(image => { %>
        <div class="gallery__item" data-category="<%= image.category %>">
          <img
            src="<%= image.path %>"
            alt="<%= image.description %>"
            class="gallery__image"
            loading="lazy"
          />
        </div>
        <% }); %> <% } else { %>
        <p class="gallery__empty">No images found</p>
        <% } %>
      </div>
    </main>

    <!-- Add this overlay section -->
    <div id="overlay" class="gallery__overlay">
      <button id="close-image" class="gallery__close">&times;</button>
      <button id="prev" class="gallery__nav gallery__nav--prev">&lt;</button>
      <button id="next" class="gallery__nav gallery__nav--next">&gt;</button>
      <img
        id="current-image"
        class="gallery__current-image"
        src=""
        alt="Current image"
      />
    </div>

    <footer class="footer">
      <p>&copy; 2024 High Georgia Welding. All rights reserved.</p>
    </footer>

    <script src="image-gallery.js"></script>
    <script src="scripts.js"></script>
  </body>
</html>
